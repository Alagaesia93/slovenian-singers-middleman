<%= I18n.locale %>
<%= t(:hello) %>
<!-- One -->
<section id="one">
  <header class="major">
    <h1><%= t(:title_first_row) %></h1>
    <h1 style="text-align: right"><%= t(:title_second_row) %></h1>
  </header>
  <br>
  <p style="text-align: justify">
    <%= t(:first_paragraph) %>
  <p style="text-align: justify">
    <%= t(:second_paragraph) %>
  </p>
  <p style="text-align: justify">
    <%= t(:third_paragraph) %>
  </p>
</section>

<!-- Two -->
<section id="singers">
  <h2></h2>
  <div class="row">
    <% data.singers.singers.each do |singer| %>
      <article class="col-6 col-12-xsmall work-item">
        <a href="<%= "#{url_for(singer.full_name)}.html" %>" class="image fit thumb">
          <picture>
            <source type="image/webp" srcset="<%= image_path("thumbs/#{singer.full_name}.webp") %>">
            <source type="image/jpeg" srcset="<%= image_path("thumbs/#{singer.full_name}.jpg") %>">
            <img loading=lazy src="<%= image_path("thumbs/#{singer.full_name}.jpg") %>" alt="<%= singer.full_name %>">
          </picture>
        </a>
        <h3 class="align-center">
          <a href="<%= "#{url_for(singer.full_name)}.html" %>">
            <%= singer.first_name + " " + singer.last_name %>
          </a>
        </h3>
      </article>
    <% end %>
  </div>
</section>

<!-- Songs -->
<section id="songs">
  <h2><%= t(:songs_title) %></h2>
  <br>
  <p style="text-align: justify">
    <%= t(:songs_description) %>
  </p>
  <br>
  <div class="button-group filters-button-group">
    <button class="button is-checked" data-filter="*">
      <%= t(:all_songs) %>
    </button>
    <button class="button" data-filter=".folk">
      <%= t(:folk_songs) %>
    </button>
    <button class="button" data-filter=".samospev">
      <%= t(:artsongs) %>
    </button>
    <br>
    <br><%= t(:singers) %>
    <br>
    <button class="button" data-filter=".betetto">Betetto</button>
    <button class="button" data-filter=".buksek">Bukšek</button>
    <button class="button" data-filter=".vicar">Vičar</button>
    <button class="button" data-filter=".lovse">Lovše</button>
    <button class="button" data-filter=".polak">Polak</button>
    <button class="button" data-filter=".rijavec">Rijavec</button>
    <button class="button" data-filter=".lupsa">Lupša</button>
    <button class="button" data-filter=".ostali">ostali</button>
    <br>
    <br><%= t(:composers) %>
    <br>
    <button class="button" data-filter=".parma">V.Parma</button>
    <button class="button" data-filter=".nedved">A.Nedvĕd</button>
    <button class="button" data-filter=".zupancic">O.Župančič</button>
    <button class="button" data-filter=".adamic">E.Adamic</button>
    <button class="button" data-filter=".pavcic">J.Pavčič</button>
    <button class="button" data-filter=".volaric">H.Volarič</button>
    <button class="button" data-filter=".foerster">A.Foerster</button>
    <br>
    <br>
    <br>
    <br>
  </div>
  <div class="partially-collapsible-content">
    <div class="row align-center isotope-grid">
      <% data.recordings.recordings.each do |recording| %>
        <div class="col-4 col-6-small isotope-grid-item <%= recording.tags %>">
          <iframe width="100%" src="<%= recording.youtube_url %>" frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen loading="lazy" title="<%= recording.send("title_#{I18n.locale}") %>"></iframe>
          <% if recording.composer %>
            <h5><%= recording.send("composer_#{I18n.locale}") || recording.composer %></h5>
          <% end %>
          <h4><%= recording.send("title_#{I18n.locale}") %></h4>
          <h5><%= recording.send("author_#{I18n.locale}") || recording.author %></h5>
        </div>
      <% end %>
    </div>
  </div>
  <button class="partially-collapsible-button button" style="display: block; margin: 10px auto;">▼</button>
</section>

